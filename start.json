{
  "daemon": true,
  "cmds": {
    "win32": {
      "nvidia": "python main.py --disable-xformers",
      "amd": "python main.py --directml"
    },
    "darwin": "python main.py --force-fp16",
    "linux": {
      "nvidia": "python main.py --disable-xformers",
      "amd": "python main.py --disable-xformers"
    }
  },
  "run": [{
    "method": "shell.run",
    "params": {
      "venv": "env",
      "path": "app",
      "message": "{{platform == 'darwin' ? self.cmds.darwin : self.cmds[platform][gpu]}}",
      "on": [{
        "event": "/http:\/\/[0-9.:]+/",
        "done": true
      }, {
        "event": "/error:/i",
        "break": false
      }]
    }
  }, {
    "method": "local.set",
    "params": {
      "url": "{{input.event[0]}}"
    }
  }, {
    "method": "proxy.start",
    "params": {
      "uri": "{{local.url}}",
      "name": "Local Sharing"
    }
  }]
}
